generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Announcement {
  id             Int      @id @default(autoincrement())
  title          String
  content          String?
  publicationDate DateTime @default(now())
  lastUpdated    DateTime @updatedAt
  categories     String[]
}